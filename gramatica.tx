Dominio:
	articulo=Articulo nombre+=Nombre[eolterm] 'define que'
		predicados*=Predicado
		reglas*=Regla
;

Palabra:
	'define que'
;

Nombre:
	!Palabra /[a-zA-Z0-9]+/
;

Articulo:
		'el'|'la'|'los'|'las'|'un'|'unos'|'una'|'unas'
;

Variable:
	articulo=Articulo name=STRING
;

Predicado:
	variable=Variable hecho+=Hecho
;

Hecho:
	('para'|'es'|'en') estado+=Estado
;

Estado:
	/[0-9]+.[0-9]+/ | INT | STRING
;

Regla:
	'regla' name=ID
;
